<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="app_user" type="com.beepmemobile.www.data.AppUser"/>
        <variable name="user" type="com.beepmemobile.www.data.User"/>
        <variable name="util" type="com.beepmemobile.www.util.Util"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorBeepPrimaryLightBg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:background="@android:color/transparent">


            <ImageView
                android:id="@+id/search_user_photo"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:imageUrl="@{user.photo_url}"
                app:imagePlaceholder="@{@android:drawable/progress_indeterminate_horizontal}"
                tools:src="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/search_user_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_photo"
                android:text="@{user.display_name}"
                tools:text="Full Name" />

            <Switch
                android:id="@+id/search_user_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:checked="@{app_user.isFavourite(user.user_id)}"
                android:text="Favorite"
                android:onClick="@{() -> app_user.addRemoveFavourite(searchUserFavorite, user.user_id)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_photo" />

            <TextView
                android:id="@+id/search_user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@{user.location}"
                tools:text="Location: Warri, Nigeria"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_full_name" />

            <TextView
                android:id="@+id/search_user_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_location"
                android:text="@{user.photo_url}"
                tools:text="+2347032710379" />


            <include
                android:id="@+id/search_user_divider"
                layout="@layout/list_item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_phone_number" />

            <TextView
                android:id="@+id/search_user_last_seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_divider"
                android:text="@{util.formatTime(user.last_seen_time)}"
                tools:text="Last seen today, 12:32 | online" />


            <ImageButton
                android:id="@+id/search_user_info"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/search_user_send_sms"
                app:layout_constraintTop_toBottomOf="@+id/search_user_divider"
                app:srcCompat="@drawable/ic_info_outline_blue_light_24dp"
                android:onClick="@{() -> app_user.viewProfile(user)}"/>

            <ImageButton
                android:id="@+id/search_user_send_sms"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> app_user.createSms(app_user.phone_no, user.phone_no, true)}"
                app:layout_constraintEnd_toStartOf="@+id/search_user_make_call"
                app:layout_constraintTop_toBottomOf="@+id/search_user_divider"
                app:srcCompat="@drawable/ic_message_blue_light_24dp" />

            <ImageButton
                android:id="@+id/search_user_make_call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_user_divider"
                android:onClick="@{() -> app_user.makeCall(app_user.phone_no, user.phone_no, true)}"
                app:srcCompat="@drawable/ic_call_blue_light_24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>